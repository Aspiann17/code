<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <GridLayout
        android:rowCount="5"
        android:columnCount="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/background_button_main"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/btn_github"
            style="@style/button_template"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Github" />

        <Button
            android:id="@+id/btn_youtube"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            style="@style/button_template"
            android:text="YouTube" />

        <ImageButton
            android:id="@+id/btn_design"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            style="@style/button_template"
            android:src="@drawable/archlinux" />

        <Button
            android:id="@+id/btn_shopee"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/button_template"
            android:text="Shopee" />

        <Button
            android:id="@+id/btn_facebook"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/button_template"
            android:text="Facebook" />

        <Button
            android:id="@+id/btn_call"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            style="@style/button_template"
            android:text="Telpon" />

        <Button
            android:id="@+id/btn_termux"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            style="@style/button_template"
            android:text="Termux"/>

        <Button
            android:id="@+id/btn_nod"
            android:layout_row="3"
            android:layout_column="2"
            style="@style/button_template"
            android:text="Nix Droid"/>

        <Button
            android:id="@+id/btn_browser"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            style="@style/button_template"
            android:text="Browser" />

    </GridLayout>
</RelativeLayout>