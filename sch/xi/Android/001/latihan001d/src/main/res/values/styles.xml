<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basic_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#8D8D8D</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/edittext</item>
    </style>

    <style name="main_info">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/profile_background_main_info</item>
    </style>

    <style name="main_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_info_text_title" parent="main_info_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="main_info_text_value" parent="main_info_text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/profile_background_main_info</item>
    </style>

    <style name="info_view">
        <item name="android:layout_width">195dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="info_text_left" parent="info_text">
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="info_text_right" parent="info_text">
        <item name="android:layout_marginEnd">20dp</item>
    </style>
</resources>